{
    "name": "miaoma-rhooks",
    "version": "1.0.0",
    "main": "index.js",
    "packageManager": "pnpm@10.15.1",
    "scripts": {
        "lint": "eslint \"{packages,apps}/**/*.{js,jsx,ts,tsx}\"",
        "spellcheck": "cspell lint --dot --gitignore --color --cache --show-suggestions \"(packages|apps)/**/*.@(html|js|cjs|mjs|ts|tsx|css|scss|md)\"",
        "typecheck": "tsc --noEmit",
        "commit": "git-cz",
        "prepare": "husky",
        "build": "turbo run build",
        "dev": "turbo run dev",
        "dev:privy-demo": "pnpm --filter=./apps/privy-demo dev",
        "test": "pnpm --filter=./packages/* test",
        "test:cov": "cross-env REACT_MODE=strict pnpm --filter=./packages/* test:cov",
        "publish:hooks": "pnpm publish --filter=./packages/hooks"
    },
    "keywords": [],
    "author": "Heyi",
    "license": "ISC",
    "description": "",
    "lint-staged": {
        "**/*.{js,jsx}": [
            "eslint --fix",
            "prettier --cache --write"
        ],
        "**/*.{ts,tsx}": [
            "eslint --fix",
            "prettier --cache --write --parser=typescript"
        ]
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-git"
        }
    },
    "dependencies": {
        "@miaoma-rhooks/hooks": "workspace:*",
        "@privy-io/react-auth": "^3.10.1",
        "@sentry/nextjs": "^10",
        "@solana-program/memo": "^0.10.0",
        "@solana-program/system": "^0.8.0",
        "@solana-program/token": "^0.6.0",
        "@solana/kit": "^5.3.0",
        "@solana/spl-token": "^0.4.14",
        "@solana/web3.js": "^1.98.4",
        "bignumber.js": "^9.3.1",
        "bn.js": "^5.2.2"
    },
    "devDependencies": {
        "@eslint/js": "9.35.0",
        "@rsbuild/plugin-node-polyfill": "^1.4.2",
        "@testing-library/react": "16.3.0",
        "@types/bn.js": "^5.2.0",
        "@types/node": "22.5.4",
        "@types/react": "18.2.0",
        "@types/react-dom": "18.2.0",
        "@vitest/coverage-istanbul": "3.2.4",
        "commitizen": "4.3.1",
        "commitlint": "19.8.1",
        "cross-env": "10.0.0",
        "cspell": "9.2.1",
        "cz-git": "1.12.0",
        "eslint": "9.35.0",
        "eslint-plugin-prettier": "5.5.4",
        "eslint-plugin-simple-import-sort": "12.1.1",
        "globals": "16.4.0",
        "husky": "9.1.7",
        "jsdom": "27.0.0",
        "lint-staged": "16.1.6",
        "prettier": "3.6.2",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "turbo": "2.5.6",
        "typescript": "5.9.2",
        "typescript-eslint": "8.43.0",
        "vitest": "3.2.4"
    }
}
