{
  "name": "miaoma-rhooks",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "lint": "eslint \"{packages,apps}/**/*.{js,jsx,ts,tsx}\"",
    "spellcheck": "cspell lint --dot --gitignore --color --cache --show-suggestions \"(packages|apps)/**/*.@(html|js|cjs|mjs|ts|tsx|css|scss|md)\"",
    "commit": "git-cz",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "Heyi",
  "license": "ISC",
  "description": "",
  "lint-staged": {
    "**/*.{js,jsx}": [
      "eslint --fix",
      "prettier --cache --write"
    ],
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --cache --write --parser=typescript"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@types/node": "22.5.4",
    "eslint": "9.35.0",
    "@eslint/js": "9.35.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "typescript": "5.9.2",
    "typescript-eslint": "8.43.0",
    "globals": "16.4.0",
    "prettier": "3.6.2",
    "eslint-plugin-prettier": "5.5.4",
    "lint-staged": "16.1.6",
    "cspell": "9.2.1",
    "commitlint": "19.8.1",
    "commitizen": "4.3.1",
    "cz-git": "1.12.0",
    "husky": "9.1.7"
  }
}
